#!/bin/sh

# Do processing to produce the releasable application.

# This is where we'll be accumulating the recipe as we develop facilities
# and how the actual release is actually organized.

tools_dir="$(dirname $0)"
app_dir="$tools_dir/.."
cd $app_dir

# USE A MAKEFILE.
echo "Making neutral-themed SpiderOak_neutral.html..."
sed -e 's/"f"/"g"/' SpiderOak.html > SpiderOak_neutral.html
echo "Making blue-themed SpiderOak_blue.html..."
sed -e 's/"f"/"i"/' SpiderOak.html > SpiderOak_blue.html
echo "Making green-themed SpiderOak_blue.html..."
sed -e 's/"f"/"h"/' SpiderOak.html > SpiderOak_green.html

echo "Done."
